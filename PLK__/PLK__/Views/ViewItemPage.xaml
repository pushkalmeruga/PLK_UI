<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLK__.ViewItemPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" Padding="20">
                <Image Source="http://cdn1.knowyourmobile.com/sites/knowyourmobilecom/files/styles/gallery_wide/public/2017/03/screen_shot_2017-03-29_at_17.33.49.png"
                            WidthRequest="150" HeightRequest="150" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <Label Text="{Binding SelectedItem.Brand, StringFormat='Brand: {0}'}" FontSize="Large"/>
                <Label Text="{Binding SelectedItem.Price, StringFormat= 'Price: {0}'}" FontSize="Large"/>
                <Button Text="BUY ITEM" Clicked="CallUser"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>