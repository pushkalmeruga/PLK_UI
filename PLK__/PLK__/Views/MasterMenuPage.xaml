<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLK__.MasterMenuPage">
    <ListView x:Name="MenuItems" HasUnevenRows="True" ItemTapped="OnMenuItemTap">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>                    
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Image Source="{Binding image}"
                            WidthRequest="25" HeightRequest="25" HorizontalOptions="Start"/>
                        <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="Medium"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Header>
            <StackLayout HeightRequest="50" VerticalOptions="FillAndExpand" BackgroundColor="Aqua">
                <Label Text="SalesJungle.com" TextColor="Black" FontSize="Large" FontFamily="papyrus" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </StackLayout>
        </ListView.Header>
    </ListView>
</ContentPage>